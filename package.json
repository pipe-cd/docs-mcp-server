{
  "name": "@pipe-cd/docs-mcp-server",
  "version": "0.0.2",
  "description": "Local MCP server for searching PipeCD docs",
  "main": "dist/main.js",
  "bin": {
    "docs-mcp-server": "dist/main.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "ts-node src/main.ts",
    "test": "jest",
    "format": "biome format --write ./src",
    "lint": "biome lint ./src",
    "check": "biome check --write ./src",
    "update-version-ts": "sed -i \"s/^const VERSION = .*;$/const VERSION = \\\"$VERSION\\\";/\" src/version.ts",
    "prepare-release": "npm version $VERSION --no-git-tag-version && VERSION=$VERSION npm run update-version-ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.0",
    "@octokit/rest": "^21.1.1",
    "@types/glob": "^8.1.0",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "glob": "^11.0.2",
    "js-yaml": "^4.1.0",
    "octokit": "^5.0.2",
    "simple-git": "^3.27.0",
    "zod": "^3.25.23"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/express": "^5.0.2",
    "@types/jest": "^29.5.14",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.15.21",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pipe-cd/docs-mcp-server.git"
  },
  "publishConfig": {
    "@pipe-cd:registry": "https://npm.pkg.github.com"
  }
}
